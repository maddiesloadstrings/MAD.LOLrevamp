-- Main love2d script
local lastTime = 0
local fps = 0
local ping = 0
local startTime = os.time()

-- Function to simulate ping (for the sake of this example, it will give a static ping value)
local function getPing()
    -- Normally you'd use something like socket.ping or an external library for actual ping data
    -- This is a simple placeholder returning a static value
    return 50 -- Simulate a constant ping of 50ms
end

function love.load()
    love.window.setTitle('FPS & Ping Monitor')
    love.graphics.setFont(love.graphics.newFont(16))
end

function love.update(dt)
    -- Calculate FPS
    lastTime = lastTime + dt
    if lastTime >= 1 then
        fps = love.timer.getFPS()
        lastTime = 0
    end

    -- Update the ping value (just simulating in this example)
    ping = getPing()
end

function love.draw()
    -- Draw FPS and Ping on screen
    love.graphics.setColor(1, 1, 1) -- white color for text
    love.graphics.print('FPS: ' .. fps, 10, 10)
    love.graphics.print('Ping: ' .. ping .. ' ms', 10, 30)
end
